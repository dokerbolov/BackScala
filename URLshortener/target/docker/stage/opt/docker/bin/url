#!/bin/sh

realpath () {
(
  TARGET_FILE="$1"

  cd "$(dirname "$TARGET_FILE")"
  TARGET_FILE=$(basename "$TARGET_FILE")

  COUNT=0
  while [ -L "$TARGET_FILE" -a $COUNT -lt 100 ]
  do
      TARGET_FILE=$(readlink "$TARGET_FILE")
      cd "$(dirname "$TARGET_FILE")"
      TARGET_FILE=$(basename "$TARGET_FILE")
      COUNT=$(($COUNT + 1))
  done

  if [ "$TARGET_FILE" = "." -o "$TARGET_FILE" = ".." ]; then
    cd "$TARGET_FILE"
    TARGET_FILEPATH=
  else
    TARGET_FILEPATH=/$TARGET_FILE
  fi

  echo "$(pwd -P)/$TARGET_FILE"
)
}

# Allow user and template_declares (see below) to add java options.
addJava () {
  java_opts="$java_opts $1"
}

# Allow user to specify java options. These get listed first per bash-template.
if [ -n "$JAVA_OPTS" ]
then
  addJava "$JAVA_OPTS"
fi

# Loads a configuration file full of default command line options for this script.
loadConfigFile() {
  cat "$1" | sed $'/^\#/d;s/\r$//' | sed 's/^-J-X/-X/' | tr '\r\n' ' '
}


real_script_path="$(realpath "$0")"
app_home="$(realpath "$(dirname "$real_script_path")")"
lib_dir="$(realpath "${app_home}/../lib")"

app_mainclass=Boot

script_conf_file="${app_home}/../conf/application.ini"
app_classpath="$lib_dir/url.url-0.6.jar:$lib_dir/org.scala-lang.scala-library-2.12.6.jar:$lib_dir/com.typesafe.akka.akka-actor-typed_2.12-2.6.8.jar:$lib_dir/com.typesafe.akka.akka-stream_2.12-2.6.8.jar:$lib_dir/com.typesafe.akka.akka-http_2.12-10.2.4.jar:$lib_dir/io.circe.circe-core_2.12-0.9.3.jar:$lib_dir/io.circe.circe-generic_2.12-0.9.3.jar:$lib_dir/io.circe.circe-parser_2.12-0.9.3.jar:$lib_dir/de.heikoseeberger.akka-http-circe_2.12-1.21.0.jar:$lib_dir/ch.qos.logback.logback-classic-1.2.3.jar:$lib_dir/org.mongodb.scala.mongo-scala-driver_2.12-4.2.3.jar:$lib_dir/com.typesafe.akka.akka-actor_2.12-2.6.8.jar:$lib_dir/com.typesafe.akka.akka-slf4j_2.12-2.6.8.jar:$lib_dir/org.slf4j.slf4j-api-1.7.30.jar:$lib_dir/com.typesafe.akka.akka-protobuf-v3_2.12-2.6.8.jar:$lib_dir/org.reactivestreams.reactive-streams-1.0.3.jar:$lib_dir/com.typesafe.ssl-config-core_2.12-0.4.1.jar:$lib_dir/com.typesafe.akka.akka-http-core_2.12-10.2.4.jar:$lib_dir/io.circe.circe-numbers_2.12-0.9.3.jar:$lib_dir/org.typelevel.cats-core_2.12-1.0.1.jar:$lib_dir/org.typelevel.macro-compat_2.12-1.1.1.jar:$lib_dir/com.chuusai.shapeless_2.12-2.3.3.jar:$lib_dir/io.circe.circe-jawn_2.12-0.9.3.jar:$lib_dir/ch.qos.logback.logback-core-1.2.3.jar:$lib_dir/org.scala-lang.scala-reflect-2.12.6.jar:$lib_dir/org.mongodb.scala.mongo-scala-bson_2.12-4.2.3.jar:$lib_dir/org.mongodb.mongodb-driver-reactivestreams-4.2.3.jar:$lib_dir/com.typesafe.config-1.4.0.jar:$lib_dir/org.scala-lang.modules.scala-java8-compat_2.12-0.8.0.jar:$lib_dir/org.scala-lang.modules.scala-parser-combinators_2.12-1.1.2.jar:$lib_dir/com.typesafe.akka.akka-parsing_2.12-10.2.4.jar:$lib_dir/com.twitter.hpack-1.0.2.jar:$lib_dir/org.typelevel.cats-macros_2.12-1.0.1.jar:$lib_dir/org.typelevel.cats-kernel_2.12-1.0.1.jar:$lib_dir/org.typelevel.machinist_2.12-0.6.2.jar:$lib_dir/org.spire-math.jawn-parser_2.12-0.11.1.jar:$lib_dir/org.mongodb.bson-4.2.3.jar:$lib_dir/org.mongodb.mongodb-driver-core-4.2.3.jar:$lib_dir/io.projectreactor.reactor-core-3.2.22.RELEASE.jar"


# If a configuration file exist, read the contents to $opts
[ -f "$script_conf_file" ] && opts=$(loadConfigFile "$script_conf_file")

exec java $java_opts -classpath $app_classpath $opts $app_mainclass "$@"
